<?xml version="1.0" encoding="utf-8"?>
    <!--登陆界面-->
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/page1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_iamge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/tour0" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginLeft="120dp"
        android:id="@+id/edittext1"
        android:layout_marginTop="260dp"
        android:hint="              手机号"
        android:textColor="@color/white"
        android:maxLines="1"
        android:textColorHint="@color/white"
        android:theme="@style/MyEditText" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:id="@+id/edittext2"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="320dp"
        android:hint="                密码"
        android:maxLines="1"
        android:theme="@style/MyEditText"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="277dp"
        android:background="@drawable/img1" />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/img2"
        android:layout_marginTop="336dp"
        android:layout_marginLeft="81dp"
        />
    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="登录"
        android:background="@drawable/button"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/button1"
        android:textColor="#F5F5F5"
        android:textStyle="bold"/>
  <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fa0"
        android:layout_marginTop="345dp"
        android:layout_marginLeft="300dp"
        android:id="@+id/imageview1"
        android:alpha="0.3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textColor="#7FFFD4"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="110dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号注册"
        android:id="@+id/text1"
        android:textColor="#7FFFD4"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="240dp"/>

    <View
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="80dp"
        android:color="#7FFFD4"
        android:background="#7FFFD4"
        android:theme="@style/MyEditText" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你也可以用以下方式登陆"
        android:textColor="@drawable/ltgray"
        android:layout_marginTop="534dp"
        android:textSize="12dp"
        android:layout_marginLeft="143dp"/>
    <View
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="279dp"
        android:color="#7FFFD4"
        android:background="#7FFFD4"
        android:theme="@style/MyEditText" />
    <ImageView
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:background="@drawable/p1"
    android:layout_marginTop="565dp"
    android:layout_marginLeft="75dp"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/p2"
        android:layout_marginTop="565dp"
        android:layout_marginLeft="180dp"/>
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/p3"
        android:layout_marginTop="565dp"
        android:layout_marginLeft="283dp"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="QQ"
    android:textSize="12dp"
    android:textColor="@drawable/ltgray"
    android:layout_marginTop="630dp"
    android:layout_marginLeft="98dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信"
        android:textSize="12dp"
        android:textColor="@drawable/ltgray"
        android:layout_marginTop="630dp"
        android:layout_marginLeft="199dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微博"
        android:textSize="12dp"
        android:textColor="@drawable/ltgray"
        android:layout_marginTop="630dp"
        android:layout_marginLeft="300dp"/>
</RelativeLayout>