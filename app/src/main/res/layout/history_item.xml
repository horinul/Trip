<?xml version="1.0" encoding="utf-8"?>
<!--我的足迹里面的组件-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:id="@+id/LL"
    android:orientation="horizontal"

    android:layout_marginLeft="30dp"><!--整个框架的上半部分-->
    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"><!--上半部分的左半部分-->
<ImageView
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:id="@+id/flag"
    android:src="@drawable/flag"/>
        <View
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/ltgray"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text="2019.8.1"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:orientation="horizontal"><!--整个框架的下半部分-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"><!--下半部分的左半部分-->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/circle"/>
            <View
                android:layout_width="2dp"
                android:layout_height="70dp"
                android:background="@drawable/ltgray"
                android:layout_gravity="center"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_width="240dp"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/pic"
                android:src="@drawable/history" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="成都理工大学" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>